<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EkleActivity">

    <EditText
        android:id="@+id/etEkleYemek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:ems="10"
        android:hint="Yemek Adı"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etEkleKisi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:ems="10"
        android:hint="Kişi Sayısı"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etEkleSure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:ems="10"
        android:hint="Hazırlama Süresi"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etEkleMalzeme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:ems="10"
        android:hint="Malzeme Listesi"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/etEkleTarif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:ems="10"
        android:hint="Yemeğin Hazırlanışı"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:background="#9f9f9f"
        android:onClick="btn1_ekle"
        android:text="Ekle" />

</LinearLayout>